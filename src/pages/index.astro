---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

const SITE_TITLE = "太爱自由的主页";
const SITE_DESCRIPTION = "技术与法律笔记，生活与成长分享";
---

<!DOCTYPE html>
<html lang="zh">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
  </head>
  <body>
    <Header />
    <main>
      <h1>欢迎来到我的主页</h1>
      <p>你好，我是刘旭发。这是我的博客，记录一些技术探索、法律笔记与生活点滴。</p>
      <p>内容持续更新中，欢迎常来看看 :)</p>
    </main>
    <Footer />
  </body>
</html>
